[MASTER]
ignore=build,dist
jobs=1
load-plugins=pylint.extensions.docparams

[MESSAGES CONTROL]
# Disable messages that are irrelevant or noisy for MicroPython
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    no-member,
    import-error,
    unused-import,
    too-many-arguments,
    too-many-instance-attributes,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-many-boolean-expressions,
    duplicate-code,
    line-too-long,
    locally-disabled,
    c-extension-no-member

[REPORTS]
output-format=colorized
reports=no

[FORMAT]
max-line-length=100

[TYPECHECK]
# MicroPython might not have standard types and modules
ignored-modules=usocket,ustruct,ujson,umachine,upysh,network,utime,uos,machine
ignored-classes=pyb,I2C,SPI,Pin,Timer,UART

[DESIGN]
max-args=6
max-locals=20
max-returns=6
max-branches=12
max-statements=50
max-line-length=100
