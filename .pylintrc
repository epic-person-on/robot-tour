[MASTER]
ignore=build
jobs=1
load-plugins=pylint.extensions.docparams

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-many-instance-attributes,
    import-error,             # May be falsely raised due to MicroPython modules
    no-member,                # May be falsely raised due to dynamic attributes
    unused-import,
    unused-argument,
    line-too-long,
    bad-continuation

[REPORTS]
reports=no
output-format=colorized

[BASIC]
good-names=i,j,k,ex,Run,_,x,y,z
max-line-length=100

[TYPECHECK]
ignored-modules=usocket,utime,uos,ure,umachine,network,machine,esp,esp32,ubinascii,upysh,neopixel
ignored-classes=pyb,UART,I2C,SPI,PWM,Pin

[FORMAT]
indent-string='    '
indent-after-paren=4

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[VARIABLES]
init-import=no
